<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_alamat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:text="Input Alamat:"
            app:layout_constraintEnd_toEndOf="@+id/tv_nama"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/tv_nama"
            app:layout_constraintTop_toBottomOf="@+id/tv_nama" />

        <EditText
            android:id="@+id/et_alamat"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/tv_alamat"
            app:layout_constraintEnd_toEndOf="@+id/et_nama"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/tv_alamat"
            app:layout_constraintTop_toTopOf="@+id/tv_alamat"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/tv_nama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="44dp"
            android:text="Input Nama:"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/et_nama"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="68dp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_nama"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/tv_nama"
            app:layout_constraintTop_toTopOf="@+id/tv_nama"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/tv_telepon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="Input No.Telepon:"
            app:layout_constraintEnd_toEndOf="@+id/tv_alamat"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/tv_alamat"
            app:layout_constraintTop_toBottomOf="@+id/tv_alamat" />

        <EditText
            android:id="@+id/et_telepon"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/tv_telepon"
            app:layout_constraintEnd_toEndOf="@+id/et_alamat"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/tv_telepon"
            app:layout_constraintTop_toTopOf="@+id/tv_telepon"
            app:layout_constraintVertical_bias="1.0" />

        <Button
            android:id="@+id/bt_proses"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="44dp"
            android:text="Proses"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.485"
            app:layout_constraintStart_toStartOf="@+id/tv_telepon"
            app:layout_constraintTop_toBottomOf="@+id/tv_telepon" />

        <TextView
            android:id="@+id/tv_hslnama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="..."
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.04"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bt_proses"
            app:layout_constraintVertical_bias="0.3" />

        <TextView
            android:id="@+id/tv_hslalamat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="..."
            app:layout_constraintEnd_toEndOf="@+id/tv_hslnama"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/tv_hslnama"
            app:layout_constraintTop_toBottomOf="@+id/tv_hslnama" />

        <TextView
            android:id="@+id/tv_hslno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="..."
            app:layout_constraintEnd_toEndOf="@+id/tv_hslalamat"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/tv_hslalamat"
            app:layout_constraintTop_toBottomOf="@+id/tv_hslalamat" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>